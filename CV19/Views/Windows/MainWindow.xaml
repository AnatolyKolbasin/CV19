<Window x:Class="CV19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CV19.ViewModels"
		xmlns:l="clr-namespace:CV19"
        Title="{Binding Title}" Height="450" Width="800">
	<Window.DataContext>
		<vm:MainWindowViewModel/>
	</Window.DataContext>
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="File">
				<MenuItem Header="Close"></MenuItem>
			</MenuItem>
			<MenuItem Header="Help">
				<MenuItem Header="About programm"></MenuItem>
			</MenuItem>
		</Menu>
		<StatusBar DockPanel.Dock="Bottom">
			<StatusBarItem>
				<TextBlock Text="1234" MinWidth="150" MaxWidth="300"/>
			</StatusBarItem>
			<StatusBarItem>
				<ProgressBar Width="120" Height="10" Value="12"/>
			</StatusBarItem>
		</StatusBar>
		<TabControl>
			<TabItem Header="tab 1">
				<Grid>
					<Rectangle Fill="Blue" Stroke="Red" StrokeThickness="3" RadiusX="5" RadiusY="7"/>
				</Grid>
			</TabItem>
			<TabItem Header="tab 2"></TabItem>
		</TabControl>
	</DockPanel>
</Window>
